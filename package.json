{
  "name": "personal-site-build",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:md": "node ./scripts/generate-md.js",
    "build:css": "sass src/assets/scss/style.scss src/assets/css/style.css --no-source-map --style=expanded",
    "start:local": "sh -lc \"(npm ci || npm i) && npm run build:css && npm run build:md && python3 -m http.server 8000 --directory dist\"",
    "check": "npm run build:css && npm run build:md"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "marked": "^5.1.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "sass": "^1.75.1"
  }
}
