{
  "name": "personal-site-build",
  "version": "2.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.client.json && sass src/assets/scss/style.scss src/assets/css/style.css --no-source-map --style=expanded && postcss src/assets/css/style.css --use cssnano --no-map --output src/assets/css/style.css && terser src/assets/js/main.js -o src/assets/js/main.js -c -m && terser src/assets/js/fab.js -o src/assets/js/fab.js -c -m && NODE_ENV=production ts-node ./src/scripts/generate-md.ts",
    "dev": "sh -lc \"(npm ci || npm i) && npm run build && python3 -m http.server 8000 --directory dist\"",
    "test": "ts-node ./src/tests/generate-md.test.ts && ts-node ./src/tests/visual-regression.ts",
    "lint": "eslint \"src/scripts/**/*.ts\" \"src/assets/ts/**/*.ts\" && stylelint \"src/assets/scss/**/*.scss\" --custom-syntax postcss-scss --allow-empty-input"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "include": [
      "src/scripts/**/*.ts",
      "src/assets/ts/**/*.ts"
    ],
    "exclude": [
      "src/tests/**",
      "dist/**",
      "node_modules/**"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^25.0.3",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "html-minifier-terser": "^7.2.0",
    "nyc": "^17.1.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-scss": "^4.0.9",
    "puppeteer": "^24.34.0",
    "purgecss": "^7.0.2",
    "sass": "^1.75.1",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-scss": "^6.13.0",
    "terser": "^5.44.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
