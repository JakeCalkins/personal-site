{
  "name": "personal-site-build",
  "version": "2.1.0",
  "private": true,
  "scripts": {
    "build:md": "ts-node ./scripts/generate-md.ts",
    "build:ts-client": "tsc --project tsconfig.client.json",
    "build:css": "sass src/assets/scss/style.scss src/assets/css/style.css --no-source-map --style=expanded",
    "start:local": "sh -lc \"(npm ci || npm i) && npm run build:css && npm run build:md && python3 -m http.server 8000 --directory dist\"",
    "check": "npm run build:css && npm run build:md",
    "test:theme": "ts-node ./scripts/test-theme-toggle.ts",
    "collect-runtime-classes": "ts-node ./scripts/collect-runtime-classes.ts",
    "coverage-css": "ts-node ./scripts/coverage-css.ts",
    "screenshot-theme": "ts-node ./scripts/screenshot-theme.ts",
    "test:unit": "ts-node ./scripts/test/generate-md.test.ts",
    "test:visual": "ts-node ./scripts/test/visual-regression.ts",
    "test": "npm run test:unit && npm run test:visual",
    "lint:js": "eslint \"src/**/*.js\" \"scripts/**/*.ts\" --ext .js,.ts",
    "lint:css": "stylelint \"src/assets/scss/**/*.scss\" --custom-syntax postcss-scss --allow-empty-input",
    "lint": "npm run lint:js && npm run lint:css"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "eslint": "^8.57.1",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "puppeteer": "^24.34.0",
    "purgecss": "^7.0.2",
    "sass": "^1.75.1",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-scss": "^6.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
    ,"pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  }
}
